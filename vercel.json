{
  "version": 2,
  "functions": {
    "api/**/*": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "buildCommand": "npm install --legacy-peer-deps && next build",
  "devCommand": null,
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "nextjs",
  "outputDirectory": "out",
  "rewrites": [
    { "source": "/guide", "destination": "/guide.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/cron/game-cycle",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "NEXT_PUBLIC_DEMO_MODE": "false"
  }
} 